@model IEnumerable<PoliziaMunicipaleContext.Data.Anagrafe>

@{
    ViewData["Title"] = "Trasgressori";
}

<h2>Trasgressori</h2>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Cognome</th>
            <th scope="col">Nome</th>
            <th scope="col">Indirizzo</th>
            <th scope="col">Città</th>
            <th scope="col">Codice Fiscale</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cognome</td>
                <td>@item.Nome</td>
                <td>@item.Indirizzo</td>
                <td>@item.Citta</td>
                <td>@item.Cod_Fisc</td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-3">
    <a class="btn btn-success" href="@Url.Action("Create", "Trasgressori")">Aggiungi Trasgressore</a>
</div>

